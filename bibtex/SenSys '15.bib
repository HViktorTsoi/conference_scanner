@inproceedings{10.1145/2809695.2817870,
author = {Min, Chulhong and Yoo, Chungkuk and Choi, Sangwon and Park, Pillsoon and Lee, Seungchul and Lee, Changhun and Choi, Seungpyo and Kang, Seungwoo and Lee, Youngki and Hwang, Inseok and Ju, Younghyun and Song, Junehwa},
title = {Demo: User Support for Power Management of Continuous Sensing Applications},
