@inproceedings{10.1145/2809695.2817896,
author = {Kim, Jun young and Jha, Sanjay and Hu, Wen and Shafagh, Hossein and Kaafar, Mohamed Ali},
title = {Poster: Toward Efficient and Secure Code Dissemination Protocol for the Internet of Things},
year = {2015},
isbn = {9781450336314},
publisher = {Association for Computing Machinery},
address = {New York, NY, USA},
url = {https://doi.org/10.1145/2809695.2817896},
