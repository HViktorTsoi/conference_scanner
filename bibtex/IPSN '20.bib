@INPROCEEDINGS{9110975,
  author={Nirmal, Isura and Khamis, Abdelwahed and Hu, Wen and Hassan, Mahbub and Zhu, Xiaoqing},
  booktitle={2020 19th ACM/IEEE International Conference on Information Processing in Sensor Networks (IPSN)}, 
  title={Poster Abstract: Combating Transceiver Layout Variation in Device-Free WiFi Sensing using Convolutional Autoencoder}, 
