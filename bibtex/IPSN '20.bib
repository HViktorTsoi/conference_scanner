@INPROCEEDINGS{9111052,
  author={Shivaraman, Nitin and Schuster, Patrick and Ramanathan, Saravanan and Easwaran, Arvind and Steinhorst, Sebastian},
  booktitle={2020 19th ACM/IEEE International Conference on Information Processing in Sensor Networks (IPSN)}, 
  title={Poster Abstract: C-Sync: The Resilient Time Synchronization Protocol}, 
  year={2020},
