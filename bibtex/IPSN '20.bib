@INPROCEEDINGS{9111029,
  author={Salehi, Shavbo and Hassan, Jahan and Bokani, Ayub and Hoseini, Sayed Amir and Kanhere, Salil S.},
  booktitle={2020 19th ACM/IEEE International Conference on Information Processing in Sensor Networks (IPSN)}, 
  title={Poster Abstract: A QoS-aware, Energy-efficient Trajectory Optimization for UAV Base Stations using Q-Learning}, 
  year={2020},
  volume={},
  number={},
  pages={329-330},
  abstract={Next generation mobile networks have proposed the integration of Unmanned Aerial Vehicles (UAVs) as aerial base stations (UAV-BS) to serve ground nodes with potentially varying QoS requirements. However, the dependence on the on-board, limited-capacity battery of the UAV-BS limits their service continuity. While conserving energy is important, meeting the QoS requirements of the ground nodes is equally important. We present an energy-efficient trajectory optimization for the UAV-BS while satisfying QoS requirements. We model the trajectory optimization as an MDP problem and solve it using Q-Learning. Simulation results reveal that our proposed algorithm decreases the average energy consumption by nearly 55% compared to a randomly-served algorithm.},
  keywords={Base stations;Energy consumption;Q-learning;Simulation;Quality of service;Information processing;Autonomous aerial vehicles},
