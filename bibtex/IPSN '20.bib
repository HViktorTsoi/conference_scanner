@INPROCEEDINGS{9110959,
  author={Gao, Jiayao and Xu, Weitao and Kanhere, Salil and Jha, Sanjay and Hu, Wen},
  booktitle={2020 19th ACM/IEEE International Conference on Information Processing in Sensor Networks (IPSN)}, 
  title={Poster Abstract: A Novel Modeling Involved Security Approach for LoRa Key Generation}, 
