pages = {855–857},
numpages = {3},
keywords = {underlay, USRP, RIO, LTE, D2D, CU},
location = {New Delhi, India},
series = {MobiCom '18}
}
@inproceedings{10.1145/3241539.3267729,
author = {Solanki, Deepak},
