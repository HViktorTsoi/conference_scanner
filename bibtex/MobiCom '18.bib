@inproceedings{10.1145/3241539.3241555,
author = {Ibrahim, Mohamed and Liu, Hansi and Jawahar, Minitha and Nguyen, Viet and Gruteser, Marco and Howard, Richard and Yu, Bo and Bai, Fan},
