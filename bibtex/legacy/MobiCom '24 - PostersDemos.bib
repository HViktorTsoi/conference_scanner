@inproceedings{10.1145/3636534.3698220,
author = {Liu, Yaxi and Mao, Wencan and Li, Xulong and Huangfu, Wei and Ji, Yusheng and Xiao, Yu},
title = {UAV-Assisted Integrated Sensing and Communication for Emergency Rescue Activities Based on Transfer Deep Reinforcement Learning},
