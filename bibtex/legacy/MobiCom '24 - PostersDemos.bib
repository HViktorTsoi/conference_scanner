@inproceedings{10.1145/3636534.3697325,
author = {Feraudo, Angelo and Maxenti, Stefano and Lacava, Andrea and Bellavista, Paolo and Polese, Michele and Melodia, Tommaso},
title = {xDevSM: Streamlining xApp Development With a Flexible Framework for O-RAN E2 Service Models},
year = {2024},
