}
@inproceedings{10.1145/3636534.3701544,
author = {Cheng, Hai and D'Oro, Salvatore and Gangula, Rajeev and Velumani, Sakthivel and Villa, Davide and Bonati, Leonardo and Polese, Michele and Melodia, Tommaso and Arrobo, Gabriel and Maciocco, Christian},
title = {ORANSlice: An Open Source 5G Network Slicing Platform for O-RAN},
year = {2024},
isbn = {9798400704895},
