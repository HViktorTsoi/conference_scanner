@inproceedings{10.1145/3636534.3698846,
author = {Zhao, Minghui and Hou, Kaiyuan and Xia, Junxi and Xia, Stephen and Jiang, Xiaofan},
title = {Connecting Foundation Models with the Physical World using Reconfigurable Drone Agents},
