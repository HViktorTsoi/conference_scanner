series = {ACM MobiCom '24}
}
@inproceedings{10.1145/3636534.3697314,
author = {Pawar, Sankalp Prakash and Thapa, Prashiddha Dhoj and Jelonek, Jonas and Kappen, Arne and Hainke, Nick and Huehn, Thomas and Schulz-Zander, Julius and Wissing, Henrike and Fietkau, Felix and Le, Martin},
title = {Open-source Resource Control API for real IEEE 802.11 Networks},
year = {2024},
isbn = {9798400704895},
publisher = {Association for Computing Machinery},
address = {New York, NY, USA},
url = {https://doi.org/10.1145/3636534.3697314},
doi = {10.1145/3636534.3697314},
abstract = {The performance of IEEE 802.11-based wireless networks is determined by the multi-parameter resource control of transmit and receive settings. With today's WiFi transceivers, controllable parameters include data rate, power, frame transmission aggregation, and global receiver settings like sensitivity. Despite its importance, research on IEEE 802.11 MAC-layer resource control over the past two decades has primarily relied on simulations.Evaluating WiFi resource control schemes in real systems typically requires software changes to the low-level MAC layer components or vendor-specific device drivers. Consequently, current WiFi systems research lacks a well-abstracted, fine-grained, and remotely controllable interface for applying and analyzing new optimizations targeting capacity, latency, bandwidth, or their combined effects. As a result, only a few practical control algorithms have been implemented, validated, and evaluated in real WiFi systems.We introduce a new set of system tools that enable efficient, fine-grained, and distributed resource control with off-the-shelf Linux-based WiFi transceivers. Our tools significantly simplify developing, validating, and evaluating new control algorithms, allowing researchers to use their preferred high-level programming languages. Our contributions include the ORCA toolchain, which comprises three components: (I) A high-performance and well-abstracted Linux kernel user space API called 'ORCA', designed for monitoring and controlling WiFi resource control parameters across different WiFi chipsets from various vendors, (II) an interface for active remote control and passive telemetry of dynamic resource control using ORCA, and (III) a Python package named 'RateMan', which enables software-defined management of WiFi resource control over multiple access points, on a per station basis.},
booktitle = {Proceedings of the 30th Annual International Conference on Mobile Computing and Networking},
pages = {1866–1873},
numpages = {8},
keywords = {wifi, MAC layer, linux kernel-user API, rate control, TX power, joint parameter optimization, interference management, machine learning for wifi, OpenWrt},
location = {Washington D.C., DC, USA},
series = {ACM MobiCom '24}
}
@inproceedings{10.1145/3636534.3697315,
author = {Peixoto, Filipe Lemos and Aguiar, Ana and Goes, Adriano},
