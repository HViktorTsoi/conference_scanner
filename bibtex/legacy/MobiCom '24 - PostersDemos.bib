@inproceedings{10.1145/3636534.3701547,
author = {Ghosh, Ushasi and Chiejina, Azuka Jude and Stephenson, Nathan Hughes and Shah, Vijay K and Shakkottai, Srinivas and Bharadia, Dinesh},
title = {DEMO: SPARC: Spatio-Temporal Adaptive Resource Control for Multi-site Spectrum Management in NextG Cellular Networks},
