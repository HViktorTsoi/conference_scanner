@inproceedings{10.1145/3636534.3698857,
author = {Ghasemi, Mahshid and Kostic, Zoran and Ghaderi, Javad and Zussman, Gil},
title = {EdgeCloudAI: Edge-Cloud Distributed Video Analytics},
year = {2024},
isbn = {9798400704895},
