}
@inproceedings{10.1145/3570361.3613289,
author = {Yu, Tzu-Hsu and Tsai, Hsin-Mu},
title = {ReMark: Privacy-preserving Fiducial Marker System via Single-pixel Imaging},
year = {2023},
isbn = {9781450399906},
