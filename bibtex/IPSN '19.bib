@inproceedings{10.1145/3302506.3312484,
author = {Tr\"{u}b, Roman and Forno, Reto Da and Gsell, Tonio and Beutel, Jan and Thiele, Lothar},
title = {A testbed for long-range LoRa communication: demo abstract},
year = {2019},
isbn = {9781450362849},
