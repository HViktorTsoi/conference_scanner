@inproceedings{10.1145/3302506.3312485,
author = {Lin, Jheng-Sing and Kuo, Che-Wei and Huang, Wei-Chen and Lee, Huang-Chen},
title = {A sensor-fusion approach system for detecting early extravasation of infant intravenous infusion: demo abstract},
